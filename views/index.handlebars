{{#each posts as |post| }}
<div class="card">
        <h1><a href="/post/{{post.post_id}}">{{post.name}}</a></h1>
        <h3>{{post.user.name}}</h3>
        <h5>{{format_date post.date_created}}</h5>
        <p>{{post.description}}</p>
        <a href="/post/{{post.post_id}}">View Post</a> 
      </div>
{{/each}}